<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.minatoorgtestcase.prodtest1</groupId>
		<artifactId>prodTest1</artifactId>
		<version>1.0.0-${env-suffix}</version>
	</parent>
	<artifactId>BackInstanceParent</artifactId>
	<packaging>pom</packaging>
    <properties>              
  		<appengine.cloud.tools.version>2.2.0</appengine.cloud.tools.version>
  	</properties>
	<build>
		<filters>
			<filter>${basedir}/src/main/resources/pom_properties/baseconfig.properties</filter>
			<filter>${basedir}/src/main/resources/pom_properties/customconfig.properties</filter>
		</filters>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.3</version>
				<configuration>
						<source>1.8</source>
						<target>1.8</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>com.google.cloud.tools</groupId>
				<artifactId>appengine-maven-plugin</artifactId>
				<version>${appengine.cloud.tools.version}</version>
				<configuration>
					<deploy.promote>false</deploy.promote>
					<projectId>${app-name}</projectId>
					<version>${app-version}</version>
					<enableJarClasses>false</enableJarClasses>
				</configuration>
			</plugin>
			<plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>2.3</version>
                <configuration>
                    <archiveClasses>true</archiveClasses>
                    <warSourceDirectory>${basedir}/WebContent</warSourceDirectory>
					<resources>
						<resource>
							<directory>${project.basedir}/src/main/resources</directory>
						</resource>
					</resources>
                    <webResources>
                        <resource>
                            <directory>${basedir}/WebContent/WEB-INF</directory>
                            <filtering>true</filtering>
                            <targetPath>WEB-INF</targetPath>
                        </resource>
                    </webResources>
                </configuration>
            </plugin>
		</plugins>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
	</build>
	<dependencies>
		<dependency>
			<groupId>org.apache.logging.log4j</groupId>
			<artifactId>log4j-to-slf4j</artifactId>
			<version>2.16.0</version>
		</dependency>
		<dependency>
		   <groupId>org.slf4j</groupId>
		    <artifactId>slf4j-jdk14</artifactId>
		    <version>1.7.28</version>
		</dependency>
		<dependency>
			<groupId>com.minatoorgtestcase.prodtest1</groupId>
			<artifactId>BackendCommonBase</artifactId>
			<version>1.0.0-${env-suffix}</version>
		</dependency>
	</dependencies>
</project>